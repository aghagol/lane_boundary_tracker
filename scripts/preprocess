#!/usr/bin/env bash

while [[ "$#" > 1 ]]; do case $1 in
    --input) input_preprocess="$2";;
    --output) output_preprocess="$2";;
    *) echo "Usage: preprocess --input [path] --output [path]"; exit 1;;
  esac; shift; shift
done

if [[ -z "$input_preprocess" ]] || [[ -z "$output_preprocess" ]] ; then
  echo "Usage: preprocess --input [path] --output [path]"
  exit 1
fi

mkdir $output_preprocess

echo $(date) "Breaking up big (drive) JSONs into small (surface) JSONs"
./modules/preprocess/break_json.py --input $input_preprocess --output $output_preprocess/surface_jsons >> $output_preprocess/log.txt

echo $(date) "Saving JSONs in MOT format"
./modules/preprocess/json2mot.py --input $output_preprocess/surface_jsons --output $output_preprocess/mot >> $output_preprocess/log.txt
